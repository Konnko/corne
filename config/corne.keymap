#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    combos {
        compatible = "zmk,combos";

        gotoadjust {
            bindings = <&tog 4>;
            key-positions = <11 23 35>;
        };

        esc {
            bindings = <&kp ESC>;
            key-positions = <19 20>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <27 28>;
        };

        enter {
            bindings = <&kp ENTER>;
            key-positions = <15 16>;
        };

        change_lang {
            bindings = <&change_lang>;
            key-positions = <0 12 24>;
        };
    };

    macros {
        left_bracket_b: lb {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_BRACKET &kp B>;
            label = "LB";
        };

        right_bracket_b: rb {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp RIGHT_BRACKET &kp B>;
            label = "RB";
        };

        change_lang: change_lang {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(SPACE) &tog 1>;
            label = "CHANGE_LANG";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base Q";
            bindings = <
&kp GRAVE      &kp Q  &kp W  &kp E     &kp R  &kp T             &kp Y      &kp U  &kp I             &kp O    &kp P      &kp EQUAL
&kp BACKSPACE  &kp A  &kp S  &kp D     &kp F  &kp G             &kp H      &kp J  &kp K             &kp L    &kp SEMI   &kp SQT
&kp MINUS      &kp Z  &kp X  &kp C     &kp V  &kp B             &kp N      &kp M  &kp COMMA         &kp DOT  &kp SLASH  &kp BSLH
                             &kp LGUI  &mo 2  &kp LEFT_SHIFT    &kp SPACE  &mo 3  &kp LEFT_CONTROL
            >;
        };

        colemak {
            bindings = <
&trans  &kp Q  &kp W  &kp F   &kp P   &kp G     &kp J   &kp L   &kp U      &kp Y    &kp SEMI  &trans
&trans  &kp A  &kp R  &kp S   &kp T   &kp D     &kp H   &kp N   &kp E      &kp I    &kp O     &trans
&trans  &kp Z  &kp X  &kp C   &kp V   &kp B     &kp K   &kp M   &kp COMMA  &kp DOT  &kp FSLH  &trans
                      &trans  &trans  &trans    &trans  &trans  &trans
            >;

            label = "Base C";
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Lower";
            bindings = <
&trans  &kp N1     &kp N2     &kp N3           &kp N4            &kp N5    &kp N6     &kp N7    &kp N8          &kp N9        &kp N0           &trans
&trans  &kp LC(H)  &kp LC(N)  &kp LC(Y)        &kp LC(U)         &none     &kp LC(I)  &kp LEFT  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &trans
&trans  &none      &none      &left_bracket_b  &right_bracket_b  &none     &kp LC(G)  &kp H     &kp N           &kp Y         &kp U            &trans
                              &trans           &trans            &trans    &trans     &none     &trans
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&none  &none  &none  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp GRAVE        &kp UNDER  &kp PLUS   &kp PIPE       &kp TILDE  &none  &none
&none  &none  &none  &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp BACKSLASH    &kp MINUS  &kp EQUAL  &kp BACKSLASH  &kp GRAVE  &none  &none
&none  &none  &none  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp MINUS        &none      &none      &none          &none      &none  &none
                     &trans                &none                  &trans           &trans     &trans     &trans
            >;
        };

        adjust_layer {
            bindings = <
&out OUT_TOG  &trans        &trans        &trans        &trans        &trans          &kp K_MUTE       &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans        &trans        &trans        &trans          &kp C_VOLUME_UP  &trans  &trans  &trans  &trans  &trans
&bt BT_CLR    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &kp C_VOL_DN     &trans  &trans  &trans  &trans  &trans
                                          &trans        &trans        &trans          &trans           &trans  &trans
            >;

            label = "Adjust";
        };
    };
};
